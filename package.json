{
  "name": "perfolio",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "nx": "nx",
    "start": "yarn build:css && nx serve",
    "build": "NODE_ENV=production yarn build:css && nx build",
    "test": "nx run-many --target=test --all",
    "fmt": "nx workspace-lint && nx lint && nx format:write",
    "e2e": "yarn build:css && nx run-many --target=e2e --all",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "update": "nx migrate latest",
    "workspace-schematic": "nx workspace-schematic",
    "dep-graph": "nx dep-graph",
    "build:css": "yarn tailwind build ./css/tailwind.src.css -c ./tailwind.config.js -o ./css/tailwind.css",
    "lighthouse": "npx start-server-and-test 'yarn build && yarn start' http://localhost:4200 'npx lighthouse http://localhost:4200 --view'"
  },
  "private": true,
  "dependencies": {
    "framer-motion": "^2.1.4",
    "next": "9.3.3",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@babel/core": "7.10.5",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "7.9.0",
    "@nrwl/cli": "^10.0.6",
    "@nrwl/cypress": "9.5.1",
    "@nrwl/eslint-plugin-nx": "9.5.1",
    "@nrwl/jest": "9.5.1",
    "@nrwl/next": "^9.5.1",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/react": "9.5.1",
    "@nrwl/storybook": "^9.5.1",
    "@nrwl/web": "9.5.1",
    "@nrwl/workspace": "9.5.1",
    "@storybook/addon-a11y": "^5.3.19",
    "@storybook/addon-knobs": "5.3.19",
    "@storybook/addon-viewport": "^5.3.19",
    "@storybook/react": "5.3.9",
    "@testing-library/react": "10.4.1",
    "@types/jest": "26.0.7",
    "@types/node": "~8.9.4",
    "@types/react": "16.9.43",
    "@types/react-dom": "16.9.8",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "babel-jest": "25.1.0",
    "babel-loader": "8.1.0",
    "cypress": "^4.1.0",
    "dotenv": "6.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "4.0.8",
    "husky": "^4.2.5",
    "jest": "25.5.4",
    "lightweight-charts": "^3.1.2",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.4",
    "react-syntax-highlighter": "^13.0.0",
    "react-test-renderer": "^16.13.1",
    "tailwindcss": "^1.5.1",
    "ts-jest": "25.2.1",
    "ts-node": "~8.10.2",
    "tslint": "~6.0.0",
    "typescript": "~3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn affected:test && yarn affected:build --parallel && yarn affected:e2e --headless"
    }
  },
  "lint-staged": {
    "{ts,tsx,js,json,md,css,html}": [
      "yarn affected:lint --uncommitted --fix=true",
      "yarn nx format:write --uncommitted"
    ]
  }
}
